#include "Tile.h"
//----------------------------------------------------------------------------------------------------------------
Tile::Tile()
{
	m_x		= 0;
	m_y		= 0;
	m_w		= 0;
	m_h		= 0;
	m_id	= 0;
}
//----------------------------------------------------------------------------------------------------------------
Tile::Tile(int tx,int ty,int th, int tw,int tid){
	m_x		= tx;
	m_y		= ty;
	m_w		= tw;
	m_h		= th;
	m_id	= tid;

	setTextureArea(m_x,m_y,m_w,m_h);
}
//----------------------------------------------------------------------------------------------------------------
Tile::~Tile(){
	m_x		= 0;
	m_y		= 0;
	m_w		= 0;
	m_h		= 0;
	m_id	= 0;
}
//----------------------------------------------------------------------------------------------------------------